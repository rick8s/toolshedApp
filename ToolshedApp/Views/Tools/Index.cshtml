@model IEnumerable<ToolshedApp.Models.Tool>

@{
    ViewBag.Title = "Index";
}

<h2>Available Tools:</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Owner)
        </th>
        
               @* <th>
            @Html.DisplayNameFor(model => model.Available)
        </th>
                <td>
            @Html.DisplayFor(modelItem => item.Available)
            </td>
            *@
        <th></th>
    </tr>

@foreach (var tool in Model) {
    <tr>
        <td>
            <img src="@tool.Image" />
           
        </td>
        <td>
            @Html.DisplayFor(modelItem => tool.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => tool.Category)
        </td>
        <td>
            @Html.DisplayFor(modelItem => tool.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => tool.Owner.FirstName)
        </td>
    
       
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=tool.ToolId }) |
            @Html.ActionLink("Borrow", "Borrow", new { id=tool.ToolId }) |
            @Html.ActionLink("Delete", "Delete", new { id=tool.ToolId })
        </td>
    </tr>
}

</table>
